<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPostItemTitle"
            style="@style/PostItemTitleStyle"/>

        <TextView
            android:id="@+id/tvPostItemText"
            style="@style/PostItemTextStyle"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvPostItemAuthor"
                android:layout_toLeftOf="@+id/tvPostItemCommentsTitle"
                android:layout_toStartOf="@+id/tvPostItemCommentsTitle"
                style="@style/PostItemAuthorStyle"/>

            <TextView
                android:id="@+id/tvPostItemCommentsTitle"
                style="@style/PostItemCommentStyle"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>